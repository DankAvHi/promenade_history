generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "windows"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  iduser Int     @id @unique(map: "iduser_UNIQUE")
  vkid   Int     @unique(map: "vkid_UNIQUE")
  name   String  @db.Text
  image  String? @db.LongText
  email  String? @db.Text
}

model ticket_type {
  idticket    Int    @id @default(autoincrement())
  name        String @db.VarChar(120)
  price       String @db.VarChar(120)
  description String @db.LongText
}

model ticket {
  idticket    Int    @id @unique(map: "idorder_UNIQUE")
  vkid        Int?
  name        String @db.VarChar(120)
  order_id    Int
  is_active   Int    @db.TinyInt
  payed       Int    @db.TinyInt
  description String @db.LongText
}
